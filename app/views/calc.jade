doctype html
html
  head
    meta(charset='utf-8')
    title Calc
    link(rel='stylesheet', href='/css/style.css')
  body
    h1 Calculator
    if x
      h3 #{x} #{op} #{y} = #{ans}

    form(method='post', action='/calc')
      input(type='text', name='x',  placeholder='x', autofocus=true)
      select(name='op')
        option +
        option -
        option *
        option /
      input(type='text', name='y',  placeholder='y')
      button Compute

